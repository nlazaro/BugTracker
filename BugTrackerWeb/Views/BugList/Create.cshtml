@model BugList

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Bug</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" for="exampleTextarea" class="form-label mt-4"></label>
            <textarea input asp-for="Description" class="form-control" id="exampleTextarea" rows="3"></textarea>
        </div>
        <br />
        <button type="submit" class="btn btn-outline-primary" style="width:150px">Add</button>
        <a asp-controller="BugList" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">
            Go Back
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
